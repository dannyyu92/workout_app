!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? "Swole | #{yield(:title)}" : 'Swole'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Workout App'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "https://js.stripe.com/v2/", "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    -#= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLISHABLE_KEY
  %body
    = render 'layouts/messages'
    = render 'layouts/navigation'
    = yield
    = render 'layouts/footer'